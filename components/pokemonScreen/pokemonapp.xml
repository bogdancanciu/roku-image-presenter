<?xml version="1.0" encoding="utf-8" ?>
<component name="PokemonApp" extends="Scene">
	<script uri="pokemonapp.bs" type="text/brightscript" />
    <children>
		<Poster 
			id="backgroundPoster"
			uri="pkg:/images/pokemon-bg.jpg"
			loadDisplayMode="scaleToFill"
			width="1280" 
      		height="720" 
		/>
    	<Label 
			id="titleLabel"
      		width="1280" 
      		height="720" 
      		horizAlign="center"
      		vertAlign="top"
			translation = "[0,20]"
			color = "#c8e8e8"
      	/>
		<Rectangle
			id="testRectangle"
			color="#000000"
			opacity="0.80"
			width="1280"
			height="285"
			translation="[0,220]"
		/>
		<Label 
			id="descriptionLabel"
      		width="1280" 
      		height="720" 
      		horizAlign="center"
      		vertAlign="center"
			wrap = "true"
			color = "#f02435"
      	/>
		<RowList 
			id = "PokemonRowList" 
			translation = "[ 10, 500 ]"
			numRows = "1" 
			itemSize = "[ 2800, 240 ]" 
			rowItemSize = "[ [280, 160] ]"
			rowItemSpacing = "[[30,0]]" 
			showRowLabel = "[ true ]" 
			rowFocusAnimationStyle = "fixedFocus"
		/>
		<RowList 
			id = "StarsList" 
			translation = "[ 480, 50 ]"
			numRows = "1" 
			itemSize = "[ 2800, 240 ]" 
			rowItemSize = "[ [40, 40] ]"
			rowItemSpacing = "[[30,0]]" 
			showRowLabel = "[ true ]" 
			rowFocusAnimationStyle = "floatingFocus"
		/>
		<Label 
			id="ratingLabel"
      		width="1280" 
      		height="720" 
      		horizAlign="center"
      		vertAlign="top"
			translation = "[0,150]"
			visible = "false"
			color = "#fffb1c"
      	/>
    </children>
</component>
